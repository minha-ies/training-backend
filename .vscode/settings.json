{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ],
  "eslint.run": "onType",
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "files.eol": "\n",
  "files.exclude": {
    "**/coverage": false,
    "**/node_modules": true
  }
}